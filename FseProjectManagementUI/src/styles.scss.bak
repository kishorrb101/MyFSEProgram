.max-lg-container {
  margin: 0 auto;
  max-width: map-get($container-max-widths, "lg");
}

.content-section.introduction {
  background-image: linear-gradient(to left, #2bc0ec, #1b81d7);
  color: #fff;
}

.content-section {
  display: block;
  padding: 30px;
  overflow: hidden;
  background-color: #f5f7f8;
}

.content-section:first-of-type>div>span {
  line-height: 1.5em;
}

.feature-title {
  font-size: 30px;
  margin-bottom: 20px;
  display: block;
}

body {
  line-height: 1.4 !important;
}

input.ng-invalid {
  border-color: red
}

select.ng-invalid {
  border-color: red
}

p-autocomplete.ng-invalid>span>input {
  border-color: red
}

p-dropdown.ng-invalid>div>label {
  border-color: red
}
